<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionRol)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionRol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, rol = ViewBag.Rol, usuario = ViewBag.UsuarioActual, NombreUsuario = ViewBag.NombreUsuario, Correo = ViewBag.Correo }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, rol = ViewBag.Rol, Usuario = ViewBag.UsuarioActual, NombreUsuario = ViewBag.NombreUsuario, Correo = ViewBag.Correo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id ,rol = ViewBag.Rol, Usuario = ViewBag.UsuarioActual, NombreUsuario = ViewBag.NombreUsuario, Correo = ViewBag.Correo})
            </td>
        </tr>
    }

</table>
